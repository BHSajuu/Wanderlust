<% layout('/layout/boilerplate') %>
<body>
     <div class="row">
      <div class="col col-8 offset-2">
        <h3>Listing Details</h3>
        <div class="card" style="width: 18rem;">
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">
          <div class="card-body mt-3">
            <p><b><%= listing.title %></b></p>
            <p class="card-text"><%= listing.description %></p>
            <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b>
            <p class="card-text">
              <%= listing.location %>,
              <%= listing.country %>
            </p>
          </div>
          <div >
            <form method="GET" action="/listing/Edit/<%= listing._id %>"><button  class="btn btn-link  " style="text-decoration: none;">Edit</button></form>
            <form method="POST" action="/listing/delete/<%= listing._id %>?_method=DELETE"><button class="btn btn-danger ">Delete</button></form>
          </div>  
        </div>
      </div>
     </div>
</body>
