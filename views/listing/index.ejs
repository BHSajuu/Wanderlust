<% layout('/layout/boilerplate') %>
<body>
    <h2>All listing</h2>

  <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
    <% for(let listing of all_data) {%>
       <a href="/listing/<%= listing._id %>" class="listing-link">
        <div class="card col " >
          <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing Image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
             <b> <%= listing.title %></b>
              <br> 
              &#8377; <%= listing.price.toLocaleString("en-IN") %>/Night
            </p>
          </div>
        </div>
       </a>
   <% } %>
  </div>
  
</body>
